    "usageInCode": {
      "importExample": "import iso11Frontal from '@/assets/teeth/iso11-frontal.png'",
      "dynamicLoadFunction": "const getToothImage = (toothNumber, view, state = 'default') => { const stateSuffix = state === 'default' ? '' : `-${state}`; return `/src/assets/teeth/iso${toothNumber}-${view}${stateSuffix}.png`; }",
      "mirroringFunction": "const shouldMirror = (toothNumber) => { const quadrant = Math.floor(toothNumber / 10); return quadrant === 2 || quadrant === 3; }"
    },
    "svgOverlaySystem": {
      "description": "Sistem pentru colorarea suprafețelor dinților cu SVG paths peste PNG-uri",
      "detailedSpecification": "SVG_OVERLAY_SYSTEM.json",
      "approach": "PNG pentru anatomie + SVG pentru colorare suprafețe",
      "advantages": [
        "Control precis al suprafețelor (O, B, L, M, D)",
        "Culori dinamice pentru restaurări și patologii",
        "Performanță excelentă",
        "Flexibilitate maximă"
      ],
      "requiredAssets": {
        "svgFiles": {
          "description": "SVG paths definind suprafețele dinților",
          "count": "96 files (32 teeth × 3 views)",
          "naming": "tooth-{number}-{view}-surfaces.svg",
          "optional": "Pot fi generate programmatic în loc de fișiere"
        }
      },
      "rendering": {
        "layer1": "PNG image (tooth anatomy)",
        "layer2": "SVG paths (colored regions for restorations/pathology)",
        "layer3": "SVG annotations (optional)"
      },
      "example": "<div class='tooth-container'>\n  <img src='iso24-frontal.png' />\n  <svg class='tooth-overlay'>\n    <path d='M...' class='surface-O restoration-amalgam' />\n  </svg>\n</div>"
    }
