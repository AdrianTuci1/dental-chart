    },
    "views": {
      "frontal": {
        "description": "Front view (buccal/labial)",
        "code": "frontal",
        "usage": "Used for upper and lower jaw buccal views"
      },
      "topview": {
        "description": "Top/occlusal view",
        "code": "topview",
        "usage": "Used for occlusal surfaces, top-down perspective"
      },
      "lingual": {
        "description": "Back view (lingual/palatal)",
        "code": "lingual",
        "usage": "Used for lingual/palatal views"
      }
    },
    "states": {
      "default": {
        "description": "Normal healthy tooth with roots",
        "suffix": "",
        "example": "iso11-frontal.png"
      },
      "noRoots": {
        "description": "Tooth crown only, no roots visible",
        "suffix": "-noroots",
        "example": "iso11-frontal-noroots.png"
      },
      "missing": {
        "description": "Empty socket or missing tooth indicator",
        "suffix": "-missing",
        "example": "iso11-frontal-missing.png"
      },
      "implant": {
        "description": "Dental implant with crown",
        "suffix": "-implant",
        "example": "iso11-frontal-implant.png"
      },
      "implantNoRoots": {
        "description": "Implant crown only",
        "suffix": "-implant-noroots",
        "example": "iso11-frontal-implant-noroots.png"
      }
    },
    "mirroringRules": {
      "description": "Images for one quadrant are mirrored for the opposite quadrant",
      "upperJaw": {
        "rightQuadrant": "teeth 11-18",
        "leftQuadrant": "teeth 21-28 (mirrored from right)",
        "rule": "Create images for 11-18, mirror horizontally for 21-28"
      },
      "lowerJaw": {
        "rightQuadrant": "teeth 41-48",
        "leftQuadrant": "teeth 31-38 (mirrored from right)",
        "rule": "Create images for 41-48, mirror horizontally for 31-38"
      },
      "implementation": "Use CSS transform: scaleX(-1) or programmatic mirroring"
    },
