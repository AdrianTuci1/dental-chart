{
  "route": "/patients/:patientId/tooth/:toothNumber",
  "component": "ToothDetailPage",
  "description": "Detailed individual tooth examination interface with 3-plane visualization and comprehensive testing",
  "layout": {
    "type": "two-column",
    "showGlobalSidebar": true,
    "columns": {
      "left": {
        "width": "240px",
        "fixed": true,
        "component": "ToothVisualization"
      },
      "right": {
        "width": "calc(100% - 240px)",
        "component": "ToothExaminationTabs"
      }
    }
  },
  "header": {
    "backButton": {
      "label": "Back to Chart",
      "route": "/patients/:patientId/chart"
    },
    "toothIdentifier": {
      "display": "Tooth {toothNumber}",
      "toothType": "calculated from toothNumber",
      "showQuadrant": true
    },
    "quickActions": [
      {
        "icon": "reset",
        "label": "Reset",
        "action": "resetToothToDefault",
        "confirmation": true
      },
      {
        "icon": "extract",
        "label": "To Be Extracted",
        "action": "markForExtraction",
        "toggle": true
      },
      {
        "icon": "missing",
        "label": "Missing",
        "action": "markAsMissing",
        "toggle": true
      }
    ]
  },
  "leftColumn": {
    "name": "ToothVisualization",
    "description": "3-plane tooth view showing frontal, top, and lingual perspectives",
    "layout": {
      "type": "vertical-stack",
      "spacing": "16px",
      "padding": "16px",
      "backgroundColor": "#F5F5F5"
    },
    "views": [
      {
        "name": "FrontalView",
        "perspective": "frontal",
        "label": "Frontal (Buccal/Labial)",
        "toothNumbers": "Display tooth number vertically",
        "image": {
          "source": "iso{toothNumber}-frontal-{state}.png",
          "width": "100%",
          "aspectRatio": "1:1.5"
        },
        "overlays": {
          "restorations": true,
          "pathology": true,
          "gingiva": true
        },
        "styling": {
          "backgroundColor": "#FFFFFF",
          "borderRadius": "8px",
          "padding": "16px",
          "border": "2px solid #E0E0E0"
        }
      },
      {
        "name": "TopView",
        "perspective": "occlusal",
        "label": "Top (Occlusal)",
        "image": {
          "source": "iso{toothNumber}-topview-{state}.png",
          "width": "100%",
          "aspectRatio": "1:1"
        },
        "overlays": {
          "restorations": true,
          "pathology": true,
          "surfaces": ["O", "M", "D"]
        },
        "styling": {
          "backgroundColor": "#FFFFFF",
          "borderRadius": "8px",
          "padding": "16px",
          "border": "2px solid #E0E0E0"
        }
      },
      {
        "name": "LingualView",
        "perspective": "lingual",
        "label": "Lingual/Palatal",
        "image": {
          "source": "iso{toothNumber}-lingual-{state}.png",
          "width": "100%",
          "aspectRatio": "1:1.5"
        },
        "overlays": {
          "restorations": true,
          "pathology": true,
          "endodontic": true
        },
        "styling": {
          "backgroundColor": "#FFFFFF",
          "borderRadius": "8px",
          "padding": "16px",
          "border": "2px solid #E0E0E0"
        }
      }
    ],
    "probingLevels": {
      "description": "Display probing depth measurements around each view",
      "frontalView": {
        "sites": ["disto-buccal", "buccal", "mesio-buccal"],
        "displayPosition": "above-tooth",
        "format": "3 numbers per site"
      },
      "topView": {
        "sites": ["mesial", "distal"],
        "displayPosition": "sides",
        "format": "3 numbers per site"
      },
      "lingualView": {
        "sites": ["disto-palatal", "palatal", "mesio-palatal"],
        "displayPosition": "above-tooth",
        "format": "3 numbers per site"
      }
    }
  },
  "rightColumn": {
    "name": "ToothExaminationTabs",
    "type": "tabbed-interface",
    "tabs": [
      {
        "id": "overview",
        "label": "Overview",
        "default": true,
        "component": "ToothOverview"
      },
      {
        "id": "endodontic",
        "label": "Endodontic",
        "component": "ToothEndodontic"
      },
      {
        "id": "periodontal",
        "label": "Periodontal",
        "component": "ToothPeriodontal"
      },
      {
        "id": "pathology",
        "label": "Pathology",
        "component": "ToothPathology"
      },
      {
        "id": "restoration",
        "label": "Restoration",
        "component": "ToothRestoration"
      }
    ]
  },
  "tabContents": {
    "overview": {
      "description": "General tooth information and quick status",
      "sections": [
        {
          "title": "Tooth Information",
          "fields": [
            {
              "label": "Tooth Number",
              "value": "toothNumber",
              "readOnly": true
            },
            {
              "label": "Tooth Type",
              "value": "calculated (incisor, canine, premolar, molar)",
              "readOnly": true
            },
            {
              "label": "Status",
              "value": "status",
              "type": "select",
              "options": ["Present", "Missing", "Extracted", "To Be Extracted", "Implant"]
            },
            {
              "label": "Last Exam",
              "value": "lastExamDate",
              "type": "date",
              "readOnly": true
            }
          ]
        },
        {
          "title": "Conditions",
          "type": "checkbox-group",
          "items": [
            { "label": "Has Implant", "field": "conditions.hasImplant" },
            { "label": "Has Crown", "field": "conditions.hasCrown" },
            { "label": "Has Bridge", "field": "conditions.hasBridge" },
            { "label": "Has Root Canal", "field": "conditions.hasRootCanal" },
            { "label": "Has Caries", "field": "conditions.hasCaries" },
            { "label": "Has Fracture", "field": "conditions.hasFracture" }
          ]
        },
        {
          "title": "Quick Actions",
          "type": "button-group",
          "buttons": [
            {
              "label": "Add Restoration",
              "action": "switchToRestorationTab"
            },
            {
              "label": "Mark Pathology",
              "action": "switchToPathologyTab"
            },
            {
              "label": "Periodontal Exam",
              "action": "switchToPeriodontalTab"
            }
          ]
        },
        {
          "title": "Notes",
          "type": "textarea",
          "field": "notes",
          "rows": 6,
          "placeholder": "Add notes about this tooth..."
        }
      ]
    },
    "endodontic": {
      "description": "Endodontic testing results",
      "topBar": {
        "items": [
          {
            "label": "Cold",
            "field": "endodontic.tests.cold",
            "type": "button-group",
            "options": [
              { "value": "normal", "label": "Normal", "color": "#00C851" },
              { "value": "sensitive", "label": "Sensitive", "color": "#FFD700" },
              { "value": "no-response", "label": "No Response", "color": "#FF4444" }
            ]
          },
          {
            "label": "Percussion",
            "field": "endodontic.tests.percussion",
            "type": "button-group",
            "options": [
              { "value": "normal", "label": "Normal", "color": "#00C851" },
              { "value": "sensitive", "label": "Sensitive", "color": "#FFD700" },
              { "value": "painful", "label": "Painful", "color": "#FF4444" }
            ]
          },
          {
            "label": "Palpation",
            "field": "endodontic.tests.palpation",
            "type": "button-group",
            "options": [
              { "value": "normal", "label": "Normal", "color": "#00C851" },
              { "value": "sensitive", "label": "Sensitive", "color": "#FFD700" },
              { "value": "painful", "label": "Painful", "color": "#FF4444" }
            ]
          },
          {
            "label": "Heat",
            "field": "endodontic.tests.heat",
            "type": "button-group",
            "options": [
              { "value": "normal", "label": "Normal", "color": "#00C851" },
              { "value": "sensitive", "label": "Sensitive", "color": "#FFD700" },
              { "value": "no-response", "label": "No Response", "color": "#FF4444" }
            ]
          },
          {
            "label": "Electricity",
            "field": "endodontic.tests.electricity",
            "type": "number-input",
            "unit": "EPT",
            "min": 0,
            "max": 10,
            "step": 0.1
          }
        ]
      },
      "rootCanalSection": {
        "title": "Root Canal Treatment",
        "checkbox": {
          "label": "Has Root Canal",
          "field": "endodontic.hasRootCanal"
        },
        "conditionalFields": {
          "showWhen": "endodontic.hasRootCanal === true",
          "fields": [
            {
              "label": "Treatment Date",
              "field": "endodontic.date",
              "type": "date"
            },
            {
              "label": "Notes",
              "field": "endodontic.notes",
              "type": "textarea",
              "rows": 4
            }
          ]
        }
      }
    },
    "periodontal": {
      "description": "Detailed periodontal measurements - see periodontal-probing.json for full specification",
      "reference": "features/periodontal-probing.json",
      "note": "This tab shows the detailed periodontal interface from the second screenshot"
    },
    "pathology": {
      "description": "Pathology marking and tracking",
      "reference": "features/pathology-menu.json",
      "layout": {
        "type": "two-column",
        "leftColumn": "Pathology type selector",
        "rightColumn": "Pathology list and details"
      }
    },
    "restoration": {
      "description": "Restoration planning and tracking",
      "reference": "features/restoration-menu.json",
      "surfaceSelector": {
        "type": "interactive-tooth-diagram",
        "clickableSurfaces": ["O", "B", "L", "M", "D"],
        "multiSelect": true
      },
      "restorationForm": {
        "fields": [
          {
            "label": "Type",
            "field": "type",
            "type": "select",
            "options": ["Filling", "Crown", "Bridge", "Veneer", "Inlay", "Onlay", "Implant"]
          },
          {
            "label": "Material",
            "field": "material",
            "type": "select",
            "options": ["Amalgam", "Composite", "Ceramic", "Gold", "Porcelain", "Zirconia"]
          },
          {
            "label": "Surfaces",
            "field": "surfaces",
            "type": "surface-selector",
            "multiSelect": true
          },
          {
            "label": "Date",
            "field": "date",
            "type": "date"
          },
          {
            "label": "Status",
            "field": "status",
            "type": "select",
            "options": ["Planned", "In Progress", "Completed"]
          }
        ]
      }
    }
  },
  "saveActions": {
    "autoSave": {
      "enabled": true,
      "debounce": 2000
    },
    "manualSave": {
      "button": {
        "label": "Save Changes",
        "position": "bottom-right",
        "fixed": true,
        "color": "#00A3E0"
      }
    },
    "validation": {
      "required": ["toothNumber", "status"],
      "showErrors": true
    }
  },
  "stateManagement": {
    "store": "toothStore",
    "state": {
      "currentTooth": "toothData",
      "selectedTab": "string",
      "isDirty": "boolean",
      "isSaving": "boolean"
    },
    "actions": [
      "fetchToothData",
      "updateToothData",
      "addRestoration",
      "removeRestoration",
      "addPathology",
      "removePathology",
      "updatePeriodontal",
      "updateEndodontic",
      "saveAllChanges"
    ]
  }
}

