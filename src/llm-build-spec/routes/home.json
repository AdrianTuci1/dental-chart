      },
      {
        "id": "patient-003",
        "firstName": "Michael",
        "lastName": "Chen",
        "dateOfBirth": "1978-11-08",
        "email": "m.chen@example.com",
        "phone": "+1-555-0125"
      }
    ]
  }
}

