{
  "route": "/",
  "component": "HomePage",
  "description": "Landing page with demo sign-in functionality",
  "layout": {
    "type": "centered",
    "backgroundColor": "#F5F5F5",
    "maxWidth": "480px"
  },
  "components": [
    {
      "name": "LoginCard",
      "type": "container",
      "styling": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "12px",
        "padding": "48px",
        "boxShadow": "0 10px 15px rgba(0,0,0,0.1)"
      },
      "children": [
        {
          "name": "Logo",
          "type": "image",
          "src": "/logo.svg",
          "alt": "Dental Charting System",
          "styling": {
            "width": "120px",
            "marginBottom": "32px",
            "display": "block",
            "marginLeft": "auto",
            "marginRight": "auto"
          }
        },
        {
          "name": "Title",
          "type": "heading",
          "level": 1,
          "text": "Welcome",
          "styling": {
            "fontSize": "30px",
            "fontWeight": "600",
            "textAlign": "center",
            "marginBottom": "8px",
            "color": "#424242"
          }
        },
        {
          "name": "Subtitle",
          "type": "text",
          "text": "Sign in to access your dental practice",
          "styling": {
            "fontSize": "14px",
            "textAlign": "center",
            "color": "#757575",
            "marginBottom": "32px"
          }
        },
        {
          "name": "DemoButton",
          "type": "button",
          "text": "Enter Demo Mode",
          "action": "navigateToDemoPatients",
          "styling": {
            "width": "100%",
            "padding": "16px",
            "backgroundColor": "#00A3E0",
            "color": "#FFFFFF",
            "border": "none",
            "borderRadius": "8px",
            "fontSize": "16px",
            "fontWeight": "600",
            "cursor": "pointer",
            "transition": "background-color 0.2s",
            "hover": {
              "backgroundColor": "#0083B8"
            }
          }
        },
        {
          "name": "OrDivider",
          "type": "divider",
          "text": "OR",
          "styling": {
            "margin": "24px 0",
            "display": "flex",
            "alignItems": "center",
            "color": "#BDBDBD",
            "fontSize": "12px"
          }
        },
        {
          "name": "EmailInput",
          "type": "input",
          "inputType": "email",
          "placeholder": "Email address",
          "validation": "email",
          "styling": {
            "width": "100%",
            "padding": "12px 16px",
            "border": "1px solid #E0E0E0",
            "borderRadius": "8px",
            "fontSize": "14px",
            "marginBottom": "16px",
            "focus": {
              "outline": "none",
              "borderColor": "#00A3E0"
            }
          }
        },
        {
          "name": "PasswordInput",
          "type": "input",
          "inputType": "password",
          "placeholder": "Password",
          "styling": {
            "width": "100%",
            "padding": "12px 16px",
            "border": "1px solid #E0E0E0",
            "borderRadius": "8px",
            "fontSize": "14px",
            "marginBottom": "24px",
            "focus": {
              "outline": "none",
              "borderColor": "#00A3E0"
            }
          }
        },
        {
          "name": "SignInButton",
          "type": "button",
          "text": "Sign In",
          "action": "handleSignIn",
          "disabled": true,
          "note": "Disabled in demo version",
          "styling": {
            "width": "100%",
            "padding": "16px",
            "backgroundColor": "#E0E0E0",
            "color": "#757575",
            "border": "none",
            "borderRadius": "8px",
            "fontSize": "16px",
            "fontWeight": "600",
            "cursor": "not-allowed"
          }
        },
        {
          "name": "ForgotPassword",
          "type": "link",
          "text": "Forgot password?",
          "href": "#",
          "styling": {
            "display": "block",
            "textAlign": "center",
            "marginTop": "16px",
            "color": "#00A3E0",
            "fontSize": "14px",
            "textDecoration": "none",
            "hover": {
              "textDecoration": "underline"
            }
          }
        }
      ]
    },
    {
      "name": "Footer",
      "type": "text",
      "text": "Â© 2025 Dental Charting System",
      "styling": {
        "textAlign": "center",
        "marginTop": "32px",
        "color": "#BDBDBD",
        "fontSize": "12px"
      }
    }
  ],
  "functionality": {
    "demoMode": {
      "description": "Primary authentication method for demo",
      "action": "Set authStore.demoMode = true, navigate to /patients",
      "mockData": "Load sample patients from mock data"
    },
    "standardLogin": {
      "description": "Disabled in demo version",
      "note": "In production, this would validate credentials against backend"
    }
  },
  "mockData": {
    "samplePatients": [
      {
