{
  "feature": "Chart Views and Display Modes",
  "description": "Different visualization modes for displaying dental charts",
  "viewModes": [
    {
      "id": "overview",
      "name": "Overview",
      "description": "Standard 4-jaw view showing all teeth from multiple perspectives",
      "default": true,
      "route": "/patients/:patientId/chart"
    },
    {
      "id": "quickselect",
      "name": "Quickselect",
      "description": "Rapid charting interface optimized for speed",
      "route": "/patients/:patientId/chart/quickselect"
    },
    {
      "id": "periodontal-probing",
      "name": "Periodontal Probing",
      "description": "Detailed periodontal examination interface",
      "route": "/patients/:patientId/chart/periodontal-probing"
    },
    {
      "id": "pathology",
      "name": "Pathology",
      "description": "Pathology marking and tracking view",
      "route": "/patients/:patientId/chart/pathology"
    },
    {
      "id": "restoration",
      "name": "Restoration",
      "description": "Restoration planning view",
      "route": "/patients/:patientId/chart/restoration"
    }
  ],
  "overviewMode": {
    "description": "Detailed specification for the main overview mode",
    "layout": "4 horizontal rows showing different jaw perspectives",
    "rows": [
      {
        "name": "Upper Buccal",
        "orientation": "upper",
        "perspective": "buccal/labial",
        "imageView": "frontal",
        "showRoots": true,
        "showGingiva": true,
        "height": "200px",
        "teethOrder": [18, 17, 16, 15, 14, 13, 12, 11, 21, 22, 23, 24, 25, 26, 27, 28],
        "numberPosition": "above"
      },
      {
        "name": "Upper Occlusal",
        "orientation": "upper",
        "perspective": "occlusal",
        "imageView": "topview",
        "showRoots": false,
        "height": "120px",
        "teethOrder": [18, 17, 16, 15, 14, 13, 12, 11, 21, 22, 23, 24, 25, 26, 27, 28],
        "numberPosition": "below"
      },
      {
        "name": "Lower Occlusal",
        "orientation": "lower",
        "perspective": "occlusal",
        "imageView": "topview",
        "showRoots": false,
        "height": "120px",
        "teethOrder": [48, 47, 46, 45, 44, 43, 42, 41, 31, 32, 33, 34, 35, 36, 37, 38],
        "numberPosition": "above"
      },
      {
        "name": "Lower Buccal",
        "orientation": "lower",
        "perspective": "buccal/labial",
        "imageView": "frontal",
        "showRoots": true,
        "showGingiva": true,
        "height": "200px",
        "teethOrder": [48, 47, 46, 45, 44, 43, 42, 41, 31, 32, 33, 34, 35, 36, 37, 38],
        "numberPosition": "below"
      }
    ],
    "spacing": {
      "betweenRows": "24px",
      "betweenTeeth": "4px",
      "betweenQuadrants": "16px"
    }
  },
  "layerSystem": {
    "description": "Multiple overlay layers that can be toggled on/off",
    "layers": [
      {
        "id": "base-teeth",
        "name": "Base Tooth Images",
        "zIndex": 1,
        "alwaysVisible": true,
        "description": "The foundational tooth images"
      },
      {
        "id": "gingiva",
        "name": "Gingival Tissue",
        "zIndex": 2,
        "toggleKey": "showPerio",
        "color": "dynamic based on health",
        "opacity": 0.6,
        "description": "Gum tissue overlay with health indicators"
      },
      {
        "id": "restorations",
        "name": "Restorations",
        "zIndex": 3,
        "toggleKey": "showDental",
        "description": "Fillings, crowns, bridges, etc."
      },
      {
        "id": "pathology",
        "name": "Pathology Markers",
        "zIndex": 4,
        "toggleKey": "showDental",
        "description": "Caries, fractures, abnormalities"
      },
      {
        "id": "endodontic",
        "name": "Endodontic Indicators",
        "zIndex": 5,
        "toggleKey": "showEndo",
        "description": "Root canal treatments"
      },
      {
        "id": "periodontal",
        "name": "Periodontal Data",
        "zIndex": 6,
        "toggleKey": "showPerio",
        "description": "Probing depths, mobility, recession"
      },
      {
        "id": "annotations",
        "name": "Annotations",
        "zIndex": 7,
        "alwaysVisible": true,
        "description": "Notes, arrows, highlights"
      },
      {
        "id": "selection",
        "name": "Selection Highlight",
        "zIndex": 8,
        "alwaysVisible": true,
        "description": "Currently selected tooth highlight"
      }
    ]
  },
  "viewToggles": {
    "location": "Global sidebar bottom",
    "toggles": [
      {
        "id": "endo-toggle",
        "label": "Endo",
        "icon": "eye",
        "stateKey": "showEndo",
        "default": true,
        "affects": ["endodontic layer", "root canal indicators"],
        "color": "#FF9800"
      },
      {
        "id": "perio-toggle",
        "label": "Perio",
        "icon": "eye",
        "stateKey": "showPerio",
        "default": true,
        "affects": ["periodontal layer", "gingiva", "probing depths"],
        "color": "#FF4444"
      },
      {
        "id": "dental-toggle",
        "label": "Dental",
        "icon": "eye",
        "stateKey": "showDental",
        "default": true,
        "affects": ["restorations", "pathology markers"],
        "color": "#00A3E0"
      }
    ],
    "styling": {
      "width": "48px",
      "height": "48px",
      "margin": "4px",
      "borderRadius": "8px",
      "backgroundColor": "#FFFFFF",
      "active": {
        "backgroundColor": "toggle.color",
        "color": "#FFFFFF"
      },
      "inactive": {
        "backgroundColor": "#E0E0E0",
        "color": "#757575",
        "opacity": 0.5
      }
    }
  },
  "jawToggles": {
    "location": "Right sidebar (fixed position)",
    "description": "Toggle visibility of upper/lower jaws",
    "buttons": [
      {
        "id": "upper-jaw",
        "icon": "upper-teeth",
        "label": "Upper Jaw",
        "stateKey": "showUpperJaw",
        "default": true,
        "affects": ["Upper Buccal row", "Upper Occlusal row"]
      },
      {
        "id": "all-teeth",
        "icon": "all-teeth",
        "label": "All Teeth",
        "stateKey": "showAllTeeth",
        "default": true,
        "action": "Show both jaws"
      },
      {
        "id": "lower-jaw",
        "icon": "lower-teeth",
        "label": "Lower Jaw",
        "stateKey": "showLowerJaw",
        "default": true,
        "affects": ["Lower Occlusal row", "Lower Buccal row"]
      }
    ]
  },
  "quickselectMode": {
    "description": "Optimized for rapid data entry",
    "features": [
      {
        "name": "Single-click selection",
        "description": "Click tooth to select, click again to open quick menu"
      },
      {
        "name": "Quick action toolbar",
        "position": "floating near selected tooth",
        "actions": [
          "Mark missing",
          "Mark extracted",
          "Add filling",
          "Add crown",
          "Add caries",
          "Add note"
        ]
      },
      {
        "name": "Keyboard shortcuts",
        "shortcuts": {
          "m": "Mark missing",
          "x": "Mark extracted",
          "f": "Add filling",
          "c": "Add crown",
          "d": "Mark decay",
          "n": "Add note",
          "arrow keys": "Navigate teeth",
          "enter": "Open detail view"
        }
      },
      {
        "name": "Bulk operations",
        "description": "Select multiple teeth and apply action to all"
      },
      {
        "name": "Auto-save",
        "interval": "2 seconds after last change"
      }
    ],
    "layout": "Same visual layout as overview but with enhanced interaction"
  },
  "zoomAndPan": {
    "enabled": true,
    "methods": [
      "Mouse wheel to zoom",
      "Pinch gesture on trackpad",
      "Click and drag to pan",
      "Zoom controls in corner"
    ],
    "limits": {
      "minZoom": "0.5x (50%)",
      "maxZoom": "3x (300%)",
      "panBoundaries": "chart bounds with 10% padding"
    },
    "zoomControls": {
      "position": "bottom-right",
      "buttons": [
        {
          "icon": "plus",
          "action": "zoomIn"
        },
        {
          "icon": "minus",
          "action": "zoomOut"
        },
        {
          "icon": "fit",
          "action": "resetZoom"
        }
      ]
    }
  },
  "responsiveAdaptations": {
    "desktop": {
      "minWidth": "1400px",
      "layout": "4-row standard layout",
      "toothSize": "100%",
      "showAllControls": true
    },
    "laptop": {
      "minWidth": "1024px",
      "maxWidth": "1399px",
      "layout": "4-row compact layout",
      "toothSize": "85%",
      "showAllControls": true
    },
    "tablet": {
      "minWidth": "768px",
      "maxWidth": "1023px",
      "layout": "2-row layout (upper/lower only)",
      "toothSize": "70%",
      "hideSecondaryControls": true
    },
    "mobile": {
      "maxWidth": "767px",
      "layout": "single-row scrollable",
      "toothSize": "60%",
      "showOnlyEssentials": true,
      "useBottomSheet": "for menus"
    }
  },
  "printMode": {
    "description": "Optimized view for printing",
    "activation": "Print button or Ctrl+P",
    "layout": {
      "pageSize": "Letter or A4",
      "orientation": "Landscape",
      "margins": "0.5in all sides"
    },
    "includes": [
      "Patient name and info header",
      "Date of examination",
      "All 4 jaw views",
      "Legend for colors/symbols",
      "Notes section",
      "Examiner signature line"
    ],
    "excludes": [
      "Interactive controls",
      "Navigation elements",
      "Sidebars"
    ]
  }
}

