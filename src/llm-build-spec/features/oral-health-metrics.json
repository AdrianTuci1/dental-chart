{
  "feature": "Oral Health Metrics",
  "description": "Dashboard sidebar component showing key oral health indicators and measurements",
  "location": "Patient Dashboard - Right Sidebar",
  "components": [
    {
      "name": "OralHealthCard",
      "type": "metrics-card",
      "title": "Oral Health",
      "collapsible": false,
      "metrics": [
        {
          "id": "plaque-index",
          "name": "Plaque Index",
          "description": "Percentage of tooth surfaces with plaque",
          "calculation": "sites with plaque / total sites examined",
          "display": {
            "type": "percentage-bar",
            "value": "number (0-100)",
            "color": "#FFD700",
            "icon": "plaque",
            "showLabel": true
          },
          "ranges": {
            "excellent": {
              "min": 0,
              "max": 10,
              "color": "#00C851",
              "label": "Excellent"
            },
            "good": {
              "min": 11,
              "max": 20,
              "color": "#64B5F6",
              "label": "Good"
            },
            "fair": {
              "min": 21,
              "max": 40,
              "color": "#FFD700",
              "label": "Fair"
            },
            "poor": {
              "min": 41,
              "max": 100,
              "color": "#FF4444",
              "label": "Poor"
            }
          },
          "methods": [
            {
              "name": "O'Leary Plaque Index",
              "formula": "(Number of surfaces with plaque / Total number of surfaces) × 100"
            },
            {
              "name": "Silness-Löe Plaque Index",
              "scale": "0-3 per tooth surface",
              "interpretation": {
                "0": "No plaque",
                "1": "Thin film of plaque",
                "2": "Moderate accumulation",
                "3": "Abundance of soft matter"
              }
            }
          ]
        },
        {
          "id": "bleeding-index",
          "name": "Bleeding Index",
          "description": "Percentage of sites that bleed on probing",
          "calculation": "sites with bleeding / total sites examined",
          "display": {
            "type": "percentage-bar",
            "value": "number (0-100)",
            "color": "#FF4444",
            "icon": "droplet",
            "showLabel": true
          },
          "ranges": {
            "healthy": {
              "min": 0,
              "max": 10,
              "color": "#00C851",
              "label": "Healthy"
            },
            "mild": {
              "min": 11,
              "max": 20,
              "color": "#64B5F6",
              "label": "Mild Inflammation"
            },
            "moderate": {
              "min": 21,
              "max": 50,
              "color": "#FFD700",
              "label": "Moderate Inflammation"
            },
            "severe": {
              "min": 51,
              "max": 100,
              "color": "#FF4444",
              "label": "Severe Inflammation"
            }
          },
          "methods": [
            {
              "name": "Ainamo & Bay Bleeding Index",
              "description": "Dichotomous (yes/no) bleeding on probing"
            },
            {
              "name": "Eastman Interdental Bleeding Index",
              "description": "Papillary bleeding index"
            }
          ]
        },
        {
          "id": "halitosis",
          "name": "Halitosis",
          "description": "Bad breath assessment",
          "display": {
            "type": "severity-badge",
            "icon": "breath",
            "color": "#9575CD"
          },
          "severityLevels": [
            {
              "value": "none",
              "label": "None",
              "color": "#00C851",
              "description": "No noticeable odor"
            },
            {
              "value": "mild",
              "label": "Mild",
              "color": "#64B5F6",
              "description": "Slight odor detectable"
            },
            {
              "value": "moderate",
              "label": "Moderate",
              "color": "#FFD700",
              "description": "Noticeable odor"
            },
            {
              "value": "severe",
              "label": "Severe",
              "color": "#FF4444",
              "description": "Strong, offensive odor"
            }
          ],
          "assessmentMethod": {
            "type": "organoleptic",
            "description": "Clinical assessment by smell",
            "distance": "At 10cm from patient's mouth",
            "timing": "Before dental examination"
          }
        }
      ],
      "lastUpdated": {
        "display": true,
        "format": "MMM DD, YYYY",
        "position": "bottom",
        "fontSize": "12px",
        "color": "#757575"
      },
      "actions": [
        {
          "icon": "refresh",
          "label": "Update Metrics",
          "action": "openMetricsUpdateModal"
        },
        {
          "icon": "chart",
          "label": "View History",
          "action": "openMetricsHistoryModal"
        }
      ]
    },
    {
      "name": "BasicPeriodontalExamination",
      "abbreviation": "BPE",
      "type": "examination-grid",
      "title": "Basic Periodontal Examination",
      "description": "Simplified periodontal screening tool used to detect periodontal disease",
      "layout": {
        "type": "3x2-grid",
        "representation": "Dental arch divided into 6 sextants"
      },
      "sextants": [
        {
          "id": "upper-right",
          "label": "UR",
          "position": "top-left",
          "teeth": [18, 17, 16]
        },
        {
          "id": "upper-anterior",
          "label": "UA",
          "position": "top-center",
          "teeth": [15, 14, 13, 12, 11, 21, 22, 23, 24, 25]
        },
        {
          "id": "upper-left",
          "label": "UL",
          "position": "top-right",
          "teeth": [26, 27, 28]
        },
        {
          "id": "lower-left",
          "label": "LL",
          "position": "bottom-right",
          "teeth": [38, 37, 36]
        },
        {
          "id": "lower-anterior",
          "label": "LA",
          "position": "bottom-center",
          "teeth": [35, 34, 33, 32, 31, 41, 42, 43, 44, 45]
        },
        {
          "id": "lower-right",
          "label": "LR",
          "position": "bottom-left",
          "teeth": [46, 47, 48]
        }
      ],
      "codes": [
        {
          "code": "0",
          "label": "Healthy",
          "description": "Colored (black) band completely visible, no calculus/defective margins, no bleeding on probing",
          "color": "#00C851",
          "severity": "none"
        },
        {
          "code": "1",
          "label": "Bleeding",
          "description": "Colored band completely visible, no calculus/defective margins, bleeding on probing",
          "color": "#64B5F6",
          "severity": "mild"
        },
        {
          "code": "2",
          "label": "Calculus",
          "description": "Colored band completely visible, calculus and/or defective margins present",
          "color": "#FFD700",
          "severity": "moderate"
        },
        {
          "code": "3",
          "label": "Shallow Pocket",
          "description": "Colored band partially visible (pocket 4-5mm)",
          "color": "#FF9800",
          "severity": "moderate-severe"
        },
        {
          "code": "4",
          "label": "Deep Pocket",
          "description": "Colored band completely disappears (pocket 6mm+)",
          "color": "#FF4444",
          "severity": "severe"
        },
        {
          "code": "*",
          "label": "Furcation",
          "description": "Furcation involvement detected",
          "color": "#9575CD",
          "severity": "special"
        }
      ],
      "codeEntry": {
        "method": "Click sextant to cycle through codes or open selector",
        "display": {
          "fontSize": "24px",
          "fontWeight": "600",
          "centered": true
        }
      },
      "interpretation": {
        "code0": "Maintain good oral hygiene",
        "code1": "Improve oral hygiene instruction",
        "code2": "Oral hygiene instruction + professional cleaning",
        "code3": "Oral hygiene instruction + scaling and root planing",
        "code4": "Comprehensive periodontal assessment and treatment",
        "codeStar": "Further investigation of furcation involvement"
      },
      "gridStyling": {
        "cell": {
          "width": "80px",
          "height": "60px",
          "border": "1px solid #E0E0E0",
          "borderRadius": "4px",
          "backgroundColor": "#FFFFFF",
          "cursor": "pointer"
        },
        "activeCellByCode": {
          "backgroundColor": "code.color",
          "color": "#FFFFFF"
        }
      }
    },
    {
      "name": "MedicalIssuesCard",
      "type": "medical-summary",
      "title": "Medical Issues",
      "collapsible": true,
      "defaultCollapsed": false,
      "sections": [
        {
          "name": "Allergies",
          "icon": "warning-triangle",
          "color": "#FF4444",
          "emptyText": "No known allergies",
          "itemTemplate": {
            "allergen": "string (bold)",
            "reaction": "string",
            "severity": {
              "display": "badge",
              "colors": {
                "mild": "#FFD700",
                "moderate": "#FF9800",
                "severe": "#FF4444",
                "life-threatening": "#D32F2F"
              }
            }
          },
          "showSeverityIndicator": true,
          "alertOnSevere": true
        },
        {
          "name": "Medications",
          "icon": "pill",
          "color": "#00A3E0",
          "emptyText": "No current medications",
          "itemTemplate": {
            "name": "string (bold)",
            "dosage": "string",
            "frequency": "string"
          },
          "showCount": true,
          "expandable": true
        },
        {
          "name": "Conditions",
          "icon": "medical-cross",
          "color": "#9575CD",
          "emptyText": "No medical conditions",
          "itemTemplate": {
            "condition": "string (bold)",
            "status": {
              "display": "badge",
              "colors": {
                "active": "#FF4444",
                "controlled": "#FFD700",
                "resolved": "#00C851"
              }
            },
            "diagnosedDate": "date (optional)"
          },
          "showStatusIndicator": true
        }
      ],
      "actions": [
        {
          "label": "Update Medical History",
          "icon": "edit",
          "action": "openMedicalHistoryModal",
          "buttonStyle": "secondary"
        }
      ],
      "alerts": {
        "severeAllergy": {
          "show": true,
          "color": "#FF4444",
          "icon": "alert",
          "position": "top"
        },
        "medicationInteraction": {
          "show": true,
          "color": "#FFD700",
          "icon": "warning"
        }
      }
    }
  ],
  "dataCollection": {
    "plaqueIndex": {
      "method": "Record plaque presence at each tooth surface",
      "surfaces": "6 per tooth (DB, B, MB, DL, L, ML)",
      "scoring": "Binary (present/absent) or 0-3 scale",
      "calculation": "Automatic based on recorded data"
    },
    "bleedingIndex": {
      "method": "Record bleeding on probing at each site",
      "sites": "6 per tooth or entire mouth",
      "timing": "Within 30 seconds of probing",
      "calculation": "Automatic based on periodontal data"
    },
    "bpe": {
      "method": "Probe each sextant and record highest score",
      "probeType": "WHO probe with colored band 3.5-5.5mm",
      "force": "20-25 grams",
      "sites": "6 sites per tooth, record highest per sextant"
    }
  },
  "modals": {
    "updateMetrics": {
      "title": "Update Oral Health Metrics",
      "width": "600px",
      "tabs": [
        {
          "label": "Plaque Index",
          "fields": [
            {
              "name": "method",
              "label": "Calculation Method",
              "type": "select",
              "options": ["O'Leary", "Silness-Löe"]
            },
            {
              "name": "value",
              "label": "Index Value",
              "type": "number",
              "unit": "%",
              "min": 0,
              "max": 100
            }
          ]
        },
        {
          "label": "Bleeding Index",
          "fields": [
            {
              "name": "method",
              "label": "Method",
              "type": "select",
              "options": ["Ainamo & Bay", "Eastman"]
            },
            {
              "name": "value",
              "label": "Index Value",
              "type": "number",
              "unit": "%",
              "min": 0,
              "max": 100
            }
          ]
        },
        {
          "label": "Halitosis",
          "fields": [
            {
              "name": "present",
              "label": "Present",
              "type": "checkbox"
            },
            {
              "name": "severity",
              "label": "Severity",
              "type": "select",
              "options": ["None", "Mild", "Moderate", "Severe"]
            },
            {
              "name": "notes",
              "label": "Notes",
              "type": "textarea",
              "rows": 3
            }
          ]
        }
      ],
      "actions": [
        {
          "label": "Cancel",
          "action": "closeModal",
          "styling": "secondary"
        },
        {
          "label": "Save",
          "action": "saveMetrics",
          "styling": "primary"
        }
      ]
    },
    "metricsHistory": {
      "title": "Oral Health Metrics History",
      "width": "800px",
      "content": {
        "type": "line-chart",
        "metrics": ["plaqueIndex", "bleedingIndex"],
        "xAxis": "Date",
        "yAxis": "Percentage",
        "dateRange": "Last 12 months"
      },
      "table": {
        "columns": ["Date", "Plaque Index", "Bleeding Index", "Halitosis", "BPE Max"],
        "sortable": true,
        "exportable": true
      }
    }
  },
  "styling": {
    "card": {
      "backgroundColor": "#FFFFFF",
      "borderRadius": "8px",
      "padding": "20px",
      "marginBottom": "16px",
      "boxShadow": "0 1px 3px rgba(0,0,0,0.12)"
    },
    "metricRow": {
      "marginBottom": "16px",
      "display": "flex",
      "alignItems": "center",
      "justifyContent": "space-between"
    },
    "progressBar": {
      "height": "8px",
      "borderRadius": "4px",
      "backgroundColor": "#F5F5F5",
      "overflow": "hidden"
    }
  }
}

