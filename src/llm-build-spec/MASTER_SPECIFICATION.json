      "print": "Optimized print layout for reports"
    }
  },
  "dataComplexity": {
    "patients": {
      "fields": 15,
      "relationships": ["charts", "treatmentPlans", "medicalHistory"]
    },
    "dentalChart": {
      "fields": 6,
      "relationships": ["teeth (32 objects)", "snapshots"]
    },
    "tooth": {
      "fields": 12,
      "nestedObjects": [
        "surfaces (5 surfaces)",
        "conditions (6 booleans)",
        "restorations (array)",
        "periodontal (complex nested)",
        "endodontic (complex nested)",
        "pathology (array)"
      ],
      "complexity": "HIGH"
    },
    "periodontalData": {
      "measurements": "6 sites × 3 measurements = 18 numbers per category",
      "categories": ["probingDepth", "gingivalMargin"],
      "indicators": "6 sites × 4 types = 24 booleans",
      "complexity": "VERY HIGH"
    }
  },
  "validationRules": {
    "toothNumbers": "ISO 3950 (11-18, 21-28, 31-38, 41-48, 51-55, 61-65, 71-75, 81-85)",
    "probingDepth": "0-12mm or >12",
    "gingivalMargin": "-12 to +12mm",
    "eptValue": "0-10",
    "dates": "ISO 8601 format",
    "ids": "UUIDs recommended",
    "colors": "Hex format (#RRGGBB)"
  },
  "accessibilityConsiderations": {
