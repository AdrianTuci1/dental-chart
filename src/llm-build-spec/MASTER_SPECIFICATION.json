  "specifications": {
    "core": {
      "architecture": {
        "file": "app-structure.json",
        "description": "Application routing, layout, state management, design system",
        "readFirst": true
      },
      "dataModels": {
        "file": "data-models.json",
        "description": "Complete data structures, tooth numbering, enums",
        "readFirst": true
      },
      "assetNaming": {
        "file": "asset-naming-convention.json",
        "description": "Image asset organization and naming conventions",
