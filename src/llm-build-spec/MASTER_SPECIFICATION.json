        "file": "SVG_OVERLAY_SYSTEM.json",
        "description": "SVG overlay system for coloring tooth surfaces",
        "readFirst": true,
        "examples": "SVG_EXAMPLES.md"
      }
    },
    "routes": {
      "description": "Detailed specifications for each page/route",
      "files": {
        "home": {
          "file": "routes/home.json",
          "route": "/",
          "description": "Landing page with demo sign-in"
        },
        "patientsList": {
          "file": "routes/patients-list.json",
          "route": "/patients",
          "description": "Patient listing and search"
        },
        "dashboard": {
          "file": "routes/patient-dashboard.json",
          "route": "/patients/:patientId/dashboard",
          "description": "Treatment plan, history, metrics, medical issues"
        },
        "chart": {
          "file": "routes/patient-chart.json",
          "route": "/patients/:patientId/chart",
          "description": "Main dental chart with 4-jaw view",
          "priority": "CRITICAL"
        },
        "toothDetail": {
          "file": "routes/tooth-detail.json",
          "route": "/patients/:patientId/tooth/:toothNumber",
          "description": "Individual tooth examination with 3-plane view",
          "priority": "HIGH"
        },
        "report": {
          "file": "routes/patient-report.json",
          "route": "/patients/:patientId/report",
          "description": "Report generation and export"
        }
      }
    },
    "features": {
      "description": "Detailed specifications for specific features",
      "files": {
        "periodontalProbing": {
          "file": "features/periodontal-probing.json",
          "description": "6-site periodontal measurements per tooth",
          "priority": "CRITICAL",
          "complexity": "HIGH"
        },
        "pathologyMenu": {
          "file": "features/pathology-menu.json",
          "description": "Pathology selection and tracking (decay, fracture, etc.)",
          "priority": "CRITICAL",
          "complexity": "MEDIUM"
        },
        "restorationMenu": {
          "file": "features/restoration-menu.json",
          "description": "Restoration planning (fillings, crowns, bridges, etc.)",
          "priority": "CRITICAL",
          "complexity": "MEDIUM"
        },
        "endodonticTests": {
          "file": "features/endodontic-tests.json",
          "description": "Pulp vitality testing (cold, heat, percussion, etc.)",
          "priority": "HIGH",
          "complexity": "MEDIUM"
        },
        "oralHealthMetrics": {
          "file": "features/oral-health-metrics.json",
          "description": "Dashboard health indicators (plaque index, BPE, etc.)",
          "priority": "MEDIUM",
          "complexity": "MEDIUM"
        },
        "timeTravel": {
          "file": "features/time-travel.json",
          "description": "Historical chart viewing and comparison",
          "priority": "MEDIUM",
          "complexity": "HIGH"
        },
        "chartViews": {
          "file": "features/chart-views.json",
          "description": "Display modes, layer system, view toggles",
          "priority": "HIGH",
          "complexity": "MEDIUM"
        }
      }
    }
  },
  "implementationOrder": {
    "phase1": {
      "name": "Foundation",
      "duration": "4-8 hours",
      "files": ["app-structure.json", "data-models.json"],
      "deliverables": [
        "Project setup",
        "Routing configured",
        "State stores created",
        "Auth + patient list working"
      ]
    },
    "phase2": {
      "name": "Core Charting",
      "duration": "12-16 hours",
      "files": [
        "routes/patient-chart.json",
        "routes/tooth-detail.json",
        "asset-naming-convention.json",
        "features/chart-views.json"
      ],
      "deliverables": [
        "4-jaw chart display",
        "Tooth rendering with assets",
        "Tooth detail view",
        "Basic click interactions"
      ],
      "priority": "CRITICAL - Core functionality"
    },
    "phase3": {
      "name": "Advanced Features",
      "duration": "20-24 hours",
      "files": [
        "features/periodontal-probing.json",
        "features/pathology-menu.json",
        "features/restoration-menu.json",
        "features/endodontic-tests.json"
      ],
      "deliverables": [
        "Periodontal measurements",
        "Pathology tracking",
        "Restoration planning",
        "Endodontic tests"
      ],
      "priority": "HIGH - Key differentiators"
    },
    "phase4": {
      "name": "Dashboard & Reports",
      "duration": "8-12 hours",
      "files": [
        "routes/patient-dashboard.json",
        "routes/patient-report.json",
        "features/oral-health-metrics.json"
      ],
      "deliverables": [
        "Dashboard with metrics",
        "Treatment plan management",
        "Report generation",
        "PDF export"
      ]
    },
    "phase5": {
      "name": "Enhancement & Polish",
      "duration": "8-12 hours",
      "files": ["features/time-travel.json"],
      "deliverables": [
        "Historical chart viewing",
        "Animations and transitions",
        "Responsive design",
        "Performance optimization"
      ]
    }
  },
