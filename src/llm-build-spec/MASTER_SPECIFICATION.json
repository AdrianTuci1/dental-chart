    "assets": {
      "toothImages": "330 PNG files with transparency",
      "imageSize": "512x512px recommended",
      "overlays": "Optional PNG overlays or CSS-based",
      "logo": "Practice logo and branding"
    },
    "browser": {
      "minimum": "Modern browsers (Chrome 90+, Firefox 88+, Safari 14+, Edge 90+)",
