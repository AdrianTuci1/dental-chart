{
  "dataModels": {
    "description": "Complete data structures for the dental charting application",
    "toothNumbering": {
      "system": "ISO 3950 (FDI World Dental Federation notation)",
      "permanent": {
        "upperRight": [18, 17, 16, 15, 14, 13, 12, 11],
        "upperLeft": [21, 22, 23, 24, 25, 26, 27, 28],
        "lowerLeft": [31, 32, 33, 34, 35, 36, 37, 38],
        "lowerRight": [41, 42, 43, 44, 45, 46, 47, 48]
      },
      "deciduous": {
        "upperRight": [55, 54, 53, 52, 51],
        "upperLeft": [61, 62, 63, 64, 65],
        "lowerLeft": [71, 72, 73, 74, 75],
        "lowerRight": [81, 82, 83, 84, 85]
      }
    },
    "patient": {
      "id": "string (UUID)",
      "firstName": "string",
      "lastName": "string",
      "dateOfBirth": "ISO date string",
      "gender": "enum: ['male', 'female', 'other']",
      "email": "string",
      "phone": "string",
      "address": {
        "street": "string",
        "city": "string",
        "state": "string",
        "zip": "string",
        "country": "string"
      },
      "medicalHistory": {
        "allergies": "string[]",
        "medications": "string[]",
        "conditions": "string[]",
        "notes": "string"
      },
      "insuranceInfo": {
        "provider": "string",
        "policyNumber": "string",
        "groupNumber": "string"
      },
      "createdAt": "ISO timestamp",
      "updatedAt": "ISO timestamp"
    },
    "tooth": {
      "toothNumber": "number (ISO 3950)",
      "status": "enum: ['present', 'missing', 'extracted', 'to-be-extracted', 'implant', 'deciduous']",
      "surfaces": {
        "occlusal": "object (restoration data)",
        "buccal": "object (restoration data)",
        "lingual": "object (restoration data)",
        "mesial": "object (restoration data)",
        "distal": "object (restoration data)"
      },
      "conditions": {
        "hasImplant": "boolean",
        "hasCrown": "boolean",
        "hasBridge": "boolean",
        "hasRootCanal": "boolean",
        "hasCaries": "boolean",
        "hasFracture": "boolean"
      },
      "restorations": [
        {
          "id": "string",
          "type": "enum: ['filling', 'crown', 'bridge', 'veneer', 'inlay', 'onlay', 'implant']",
          "material": "enum: ['amalgam', 'composite', 'ceramic', 'gold', 'porcelain', 'zirconia']",
          "surfaces": "string[] (e.g., ['O', 'M', 'D'])",
          "color": "string (hex color for visualization)",
          "date": "ISO date",
          "status": "enum: ['planned', 'in-progress', 'completed']"
        }
      ],
      "endodontic": {
        "hasRootCanal": "boolean",
        "date": "ISO date",
        "tests": {
          "cold": "enum: ['normal', 'sensitive', 'no-response']",
          "heat": "enum: ['normal', 'sensitive', 'no-response']",
          "percussion": "enum: ['normal', 'sensitive', 'painful']",
          "palpation": "enum: ['normal', 'sensitive', 'painful']",
          "electricity": "number (EPT value)"
        }
      },
      "periodontal": {
        "probingDepth": {
          "distoPalatal": "[number, number, number] (3 measurements)",
          "palatal": "[number, number, number]",
          "mesioPalatal": "[number, number, number]",
          "distoBuccal": "[number, number, number]",
          "buccal": "[number, number, number]",
          "mesioBuccal": "[number, number, number]"
        },
        "gingivalMargin": {
          "distoPalatal": "[number, number, number]",
          "palatal": "[number, number, number]",
          "mesioPalatal": "[number, number, number]",
          "distoBuccal": "[number, number, number]",
          "buccal": "[number, number, number]",
          "mesioBuccal": "[number, number, number]"
        },
        "bleeding": "boolean[] (6 sites)",
        "plaque": "boolean[] (6 sites)",
        "pus": "boolean[] (6 sites)",
        "tartar": "boolean[] (6 sites)",
        "mobility": "enum: ['0', '1', '2', '3']",
        "furcation": "enum: ['0', '1', '2', '3']"
      },
      "pathology": [
        {
          "id": "string",
          "type": "enum: ['decay', 'fracture', 'tooth-wear', 'discoloration', 'apical', 'development-disorder']",
          "subtype": "string (specific pathology)",
          "severity": "enum: ['mild', 'moderate', 'severe']",
          "location": "string[] (surfaces affected)",
          "date": "ISO date",
          "notes": "string"
        }
      ],
      "notes": "string",
      "lastExamDate": "ISO timestamp"
    },
    "dentalChart": {
      "id": "string (UUID)",
      "patientId": "string (UUID reference)",
      "date": "ISO timestamp",
      "teeth": "Map<toothNumber, tooth>",
      "globalNotes": "string",
      "examiner": "string (dentist name)",
      "isArchived": "boolean"
    },
    "treatmentPlan": {
      "id": "string (UUID)",
      "patientId": "string (UUID reference)",
      "items": [
        {
          "id": "string",
          "toothNumber": "number | null",
          "procedure": "string",
          "description": "string",
          "estimatedCost": "number",
          "priority": "enum: ['urgent', 'high', 'medium', 'low']",
          "status": "enum: ['proposed', 'accepted', 'in-progress', 'completed', 'cancelled']",
          "scheduledDate": "ISO date | null",
          "completedDate": "ISO date | null"
        }
      ],
      "totalCost": "number",
      "createdAt": "ISO timestamp",
      "updatedAt": "ISO timestamp"
    },
    "oralHealthMetrics": {
      "patientId": "string (UUID reference)",
      "date": "ISO timestamp",
      "plaqueIndex": {
        "value": "number (0-100%)",
        "calculation": "enum: ['silness-loe', 'o-leary']",
        "sites": "number (sites with plaque / total sites)"
      },
      "bleedingIndex": {
        "value": "number (0-100%)",
        "calculation": "enum: ['ainamo-bay', 'eastman']",
        "sites": "number (sites with bleeding / total sites)"
      },
      "halitosis": {
        "present": "boolean",
        "severity": "enum: ['none', 'mild', 'moderate', 'severe']",
        "notes": "string"
      },
      "basicPeriodontalExamination": {
        "sextants": [
          {
            "sextant": "enum: ['upper-right', 'upper-anterior', 'upper-left', 'lower-left', 'lower-anterior', 'lower-right']",
            "code": "enum: ['0', '1', '2', '3', '4', '*']",
            "notes": "string"
          }
        ],
        "interpretation": "string"
      }
    },
    "softTissue": {
      "patientId": "string (UUID reference)",
      "date": "ISO timestamp",
      "extraoralExam": {
        "lips": "string",
        "lymphNodes": "string",
        "tmj": "string",
        "facialSymmetry": "string"
      },
      "intraoralExam": {
        "tongue": "string",
        "palate": "string",
        "gingiva": "string",
        "buccalMucosa": "string",
        "floor": "string",
        "oropharynx": "string"
      },
      "abnormalFindings": [
        {
          "location": "string",
          "description": "string",
          "severity": "enum: ['minor', 'moderate', 'concerning', 'urgent']",
          "requiresReferral": "boolean"
        }
      ]
    },
    "medicalIssues": {
      "patientId": "string (UUID reference)",
      "allergies": [
        {
          "allergen": "string",
          "reaction": "string",
          "severity": "enum: ['mild', 'moderate', 'severe', 'life-threatening']"
        }
      ],
      "medications": [
        {
          "name": "string",
          "dosage": "string",
          "frequency": "string",
          "startDate": "ISO date",
          "endDate": "ISO date | null"
        }
      ],
      "conditions": [
        {
          "condition": "string",
          "diagnosedDate": "ISO date",
          "status": "enum: ['active', 'controlled', 'resolved']",
          "notes": "string"
        }
      ],
      "lastUpdated": "ISO timestamp"
    },
    "historicalRecord": {
      "description": "For time-travel feature - snapshots of dental charts",
      "id": "string (UUID)",
      "patientId": "string (UUID reference)",
      "snapshotDate": "ISO timestamp",
      "chart": "dentalChart (full snapshot)",
      "note": "string (reason for snapshot)"
    }
  },
  "enums": {
    "toothSurfaces": ["O", "B", "L", "M", "D"],
    "toothStatus": ["present", "missing", "extracted", "to-be-extracted", "implant", "deciduous"],
    "restorationType": ["filling", "crown", "bridge", "veneer", "inlay", "onlay", "implant", "partial-denture", "full-denture"],
    "restorationMaterial": ["amalgam", "composite", "ceramic", "gold", "porcelain", "zirconia", "resin", "metal"],
    "pathologyType": ["decay", "fracture", "tooth-wear", "discoloration", "apical", "development-disorder"],
    "decaySubtypes": ["occlusal-caries", "proximal-caries", "cervical-caries", "root-caries", "recurrent-caries"],
    "fractureSubtypes": ["enamel-fracture", "crown-fracture", "root-fracture", "complete-fracture"],
    "wearSubtypes": ["attrition", "abrasion", "erosion", "abfraction"],
    "discolorationSubtypes": ["extrinsic", "intrinsic", "fluorosis", "tetracycline"],
    "apicalSubtypes": ["abscess", "granuloma", "cyst"],
    "developmentDisorderSubtypes": ["hypoplasia", "hypocalcification", "dens-invaginatus", "dilaceration"],
    "mobilityClass": ["0", "1", "2", "3"],
    "furcationClass": ["0", "1", "2", "3"],
    "bpeCode": ["0", "1", "2", "3", "4", "*"],
    "treatmentPriority": ["urgent", "high", "medium", "low"],
    "treatmentStatus": ["proposed", "accepted", "in-progress", "completed", "cancelled"]
  }
}

