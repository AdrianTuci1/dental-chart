{
  "application": {
    "name": "Dental Charting System",
    "description": "Professional dental practice management and charting application",
    "version": "1.0.0",
    "framework": "React 18 + Vite"
  },
  "routing": {
    "strategy": "React Router v6 with nested routes",
    "routes": [
      {
        "path": "/",
        "component": "HomePage",
        "description": "Landing page with demo sign-in",
        "public": true
      },
      {
        "path": "/patients",
        "component": "PatientsListPage",
        "description": "List and search patients",
        "protected": true
      },
      {
        "path": "/patients/:patientId",
        "component": "PatientLayout",
        "description": "Patient-specific layout wrapper with sidebar",
        "protected": true,
        "children": [
          {
            "path": "",
            "redirect": "/patients/:patientId/dashboard"
          },
          {
            "path": "dashboard",
            "component": "PatientDashboardPage",
            "description": "Treatment plan, history, soft tissue, oral health metrics"
          },
          {
            "path": "report",
            "component": "PatientReportPage",
            "description": "Generate and view reports"
          },
          {
            "path": "chart",
            "component": "PatientChartPage",
            "description": "Main dental chart with multiple view modes",
            "children": [
              {
                "path": "",
                "component": "ChartOverview",
                "description": "Default 4-jaw overview (upper buccal, upper occlusal, lower occlusal, lower buccal)"
              },
              {
                "path": "quickselect",
                "component": "ChartQuickselect",
                "description": "Quick selection interface for rapid charting"
              },
              {
                "path": "periodontal-probing",
                "component": "ChartPeriodontalProbing",
                "description": "Detailed periodontal examination interface"
              },
              {
                "path": "pathology",
                "component": "ChartPathology",
                "description": "Pathology marking and tracking"
              },
              {
                "path": "restoration",
                "component": "ChartRestoration",
                "description": "Restoration planning and tracking"
              }
            ]
          },
          {
            "path": "tooth/:toothNumber",
            "component": "ToothDetailPage",
            "description": "Individual tooth examination with 3-plane view",
            "children": [
              {
                "path": "",
                "component": "ToothOverview",
                "description": "Default tooth view with basic information"
              },
              {
                "path": "endodontic",
                "component": "ToothEndodontic",
                "description": "Endodontic tests (cold, percussion, palpation, heat, electricity)"
              },
              {
                "path": "periodontal",
                "component": "ToothPeriodontal",
                "description": "Detailed periodontal measurements for individual tooth"
              },
              {
                "path": "pathology",
                "component": "ToothPathology",
                "description": "Tooth-specific pathology (decay, fracture, wear, discoloration, apical, development disorder)"
              },
              {
                "path": "restoration",
                "component": "ToothRestoration",
                "description": "Tooth-specific restoration planning"
              }
            ]
          }
        ]
      }
    ]
  },
  "layout": {
    "mainLayout": {
      "description": "Global layout wrapper",
      "components": ["GlobalSidebar", "MainContent", "Notifications"]
    },
    "globalSidebar": {
      "width": "54px",
      "backgroundColor": "#0083B8",
      "position": "fixed",
      "items": [
        {
          "icon": "arrow-left",
          "label": "Back",
          "action": "navigate-back"
        },
        {
          "icon": "tooth-grid",
          "label": "Patients",
          "route": "/patients"
        },
        {
          "icon": "person",
          "label": "Profile",
          "action": "show-profile"
        },
        {
          "icon": "document",
          "label": "Documents",
          "action": "show-documents"
        },
        {
          "separator": true
        },
        {
          "icon": "eye",
          "label": "Endo",
          "position": "bottom",
          "toggle": "endoView"
        },
        {
          "icon": "eye",
          "label": "Perio",
          "position": "bottom",
          "toggle": "perioView"
        },
        {
          "icon": "eye",
          "label": "Dental",
          "position": "bottom",
          "toggle": "dentalView"
        }
      ]
    },
    "patientLayout": {
      "description": "Layout for patient-specific pages",
      "header": {
        "showPatientName": true,
        "showNavigation": true,
        "navigation": [
          {
            "label": "Dashboard",
            "route": "/patients/:patientId/dashboard"
          },
          {
            "label": "Report",
            "route": "/patients/:patientId/report"
          },
          {
            "label": "Chart",
            "route": "/patients/:patientId/chart"
          }
        ]
      }
    }
  },
  "stateManagement": {
    "library": "Zustand",
    "stores": [
      {
        "name": "authStore",
        "description": "User authentication state",
        "state": ["user", "isAuthenticated", "demoMode"]
      },
      {
        "name": "patientStore",
        "description": "Patient data and selection",
        "state": ["patients", "selectedPatient", "searchQuery"]
      },
      {
        "name": "chartStore",
        "description": "Dental chart state",
        "state": ["teeth", "selectedTooth", "viewMode", "historicalDate", "showEndo", "showPerio", "showDental"]
      },
      {
        "name": "toothStore",
        "description": "Individual tooth examination data",
        "state": ["currentTooth", "periodontalData", "endodonticData", "pathologyData", "restorationData"]
      },
      {
        "name": "dashboardStore",
        "description": "Dashboard metrics and data",
        "state": ["treatmentPlan", "history", "softTissue", "oralHealthMetrics", "medicalIssues"]
      }
    ]
  },
  "globalFeatures": {
    "authentication": {
      "type": "demo-mode",
      "description": "Simple demo login without backend validation"
    },
    "notifications": {
      "position": "top-right",
      "types": ["success", "error", "warning", "info"]
    },
    "timeTravel": {
      "description": "View historical chart data",
      "component": "TimeTravelControls",
      "placement": "chart-header"
    },
    "viewToggles": {
      "description": "Toggle visibility of endo, perio, and dental overlays",
      "location": "global-sidebar-bottom"
    }
  },
  "designSystem": {
    "colors": {
      "primary": "#00A3E0",
      "primaryDark": "#0083B8",
      "secondary": "#64B5F6",
      "success": "#00C851",
      "warning": "#FFD700",
      "error": "#FF4444",
      "gray100": "#F5F5F5",
      "gray200": "#E0E0E0",
      "gray300": "#BDBDBD",
      "gray500": "#757575",
      "gray700": "#424242",
      "purple": "#9575CD",
      "cyan": "#4DD0E1",
      "yellow": "#FFD700",
      "white": "#FFFFFF"
    },
    "typography": {
      "fontFamily": "'Inter', 'Segoe UI', 'Roboto', sans-serif",
      "sizes": {
        "xs": "12px",
        "sm": "14px",
        "base": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px",
        "3xl": "30px"
      }
    },
    "spacing": {
      "unit": "8px",
      "scale": [4, 8, 12, 16, 24, 32, 48, 64]
    },
    "borderRadius": {
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 3px rgba(0,0,0,0.12)",
      "md": "0 4px 6px rgba(0,0,0,0.1)",
      "lg": "0 10px 15px rgba(0,0,0,0.1)"
    }
  }
}

